<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>xpwhere</AssemblyName>
        <IsPackable>false</IsPackable>
        <PackageId>xpwhere</PackageId>
        <Title>xpwhere</Title>
        <Company>xpwhere</Company>
        <Product>xpwhere</Product>
        <PublishAot>false</PublishAot>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Helpers\" />
      <Folder Include="Localizations\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Spectre.Console" Version="0.53.0" />
      <PackageReference Include="Spectre.Console.Cli" Version="0.52.0" />
      <PackageReference Include="Spectre.Console.Cli.Extensions.DependencyInjection" Version="0.16.0" />
    </ItemGroup>

</Project>
